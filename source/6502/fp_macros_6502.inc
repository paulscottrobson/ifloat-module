; -------------------------------------------------------------------------------------------
;
;                               Register to Register copy macro
;
; -------------------------------------------------------------------------------------------

FloatCopyReg .macro
        lda     \1+0
        sta     \2+0
        lda     \1+1
        sta     \2+1
        lda     \1+2
        sta     \2+2
        lda     \1+3
        sta     \2+3
        lda     \1+4
        sta     \2+4
        lda     \1+5
        sta     \2+5
        .endm

